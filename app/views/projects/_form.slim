= form_with(model: project, class: 'p-6', data: { turbo: false }) do |form|
  = form.text_field(:name, placeholder: 'What shall we call your awesome project?', class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full')
  = form.text_area(:description, placeholder: "Is there anything you'd like to say about your awesome project?", rows: 4, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full')

  = form.submit(class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer')
